<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg1"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rajukoushik.fitnessforks.IntroActivity"
    tools:showIn="@layout/activity_intro">

    <ScrollView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <VideoView
        android:id="@+id/video"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:keepScreenOn="true"></VideoView>





    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:text="Fitness Forks"

        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/bestforyou"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:background="#00b5ff"
                android:layout_below="@+id/video"
                android:fontFamily="segoe UI"
                android:gravity="center"
                android:onClick="btnbfu"
                android:textColor="#ffffff"
                android:text="what's BEST for you ?"
                android:textSize="15sp"
                android:textStyle="normal"
                />



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bestforyou"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Why Fitness Forks ?"
                android:fontFamily="segoe UI"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wffa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wff"
                android:fontFamily="segoe UI"
                android:layout_marginTop="10dp"
                android:text="Anything which can't be measured ,can't be improved . Who is measuring the most important thing you put in your body: Your food?
precise nutritional data gives you insights into our health. Fitness Forks makes this dead easy. We do it for you.We combine this with your health data and your lifestyle activity data to give you the power of cutting edge technology and latest nutrition science"
                android:textColor="#000000"
                android:textSize="12sp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:elevation="5dp"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/wsn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Why smart nutrition?"
                    android:fontFamily="segoe UI"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/wsna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wsn"
                    android:fontFamily="segoe UI"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:text="Smart nutrition is the next stage in the evolution of mankind. Donít just eat like itís 10,000 years ago.We understand a lot more about our nutrition and health now. Fitnessforks SMART NUTRITION ANALYTICS is a cutting edge technology based on the latest in nutrition science and research. It measures everything you eat and analyzes it in the context of your health and lifestyle and provides you with crucial, actionable insights. It’s like having your own personal nutrition scientist and chef, at your fingertips."
                    android:textSize="12sp" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view2"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/wcab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="We care about your Health"
                        android:fontFamily="segoe UI"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/wcaba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wcab"
                        android:fontFamily="segoe UI"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:text="We crafted a wide range of smart meals , Custom design your meals based on your body and goals. It’s the fastest way to make your body fit and  health."/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view3"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="5dp"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/wte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Keep Track Of Everything"
                        android:fontFamily="segoe UI"
                        android:textColor="#000000"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/wtea"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wte"
                        android:fontFamily="segoe UI"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:text="Fitnessforks Smart Nutrition Engine precisely tracks and analyzes your nutrition and understands your health deeply."/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>







        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
