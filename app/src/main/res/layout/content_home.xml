<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rajukoushik.fitnessforks.HomeActivity"
    tools:showIn="@layout/app_bar_home">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:textSize="23sp"
            android:text="Add 6,12,15 meals to checkout"
            android:id="@+id/textView3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">
        <Button
            android:layout_marginTop="65dp"
            android:id="@+id/loginButtonId"
            android:layout_width="wrap_content"
            android:layout_height="50sp"

            android:fontFamily="segoe UI"

            android:background="#f48342"
            android:textColor="#ffffff"
            android:text="6 Meals"
            android:textSize="15sp"
            android:textStyle="normal"
            />

    </LinearLayout>

    <Button
        android:id="@+id/meals15"
        android:layout_width="wrap_content"
        android:layout_height="50sp"

        android:fontFamily="segoe UI"

        android:background="#f48342"
        android:textColor="#ffffff"
        android:text="12 Meals"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:id="@+id/meals12"
        android:layout_width="wrap_content"
        android:layout_height="50sp"

        android:fontFamily="segoe UI"

        android:background="#f48342"
        android:textColor="#ffffff"
        android:text="15 Meals"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10$"
        android:paddingTop="8dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:id="@+id/textView4"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="20$"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30$"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:textColor="#ffffff"
        android:id="@+id/textView6"
        android:gravity="center"
        android:layout_below="@+id/meals15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/meals15"
        android:layout_alignStart="@+id/meals15" />


</RelativeLayout>
