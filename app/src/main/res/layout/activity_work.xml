<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.rajukoushik.fitnessforks.WorkActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        android:textColor="#00b5ff"
        android:paddingBottom="40dp"
        android:text="How active are you ?"
        android:id="@+id/textView" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"


        android:layout_below="@+id/textView">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:checked="true"
            android:text="Low" />
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="Moderate"
            android:layout_alignTop="@+id/radioGroup1"
            android:layout_centerHorizontal="true" />
        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="High"
            android:layout_alignTop="@+id/radioGroup1"
            android:layout_centerHorizontal="true" />

    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="30dp"
        android:paddingTop="40dp"
        android:textColor="#00b5ff"
        android:layout_below="@id/radioGroup1"

        android:paddingBottom="40dp"
        android:text="Your Goals"
        android:id="@+id/textView2" />

    <RadioGroup
        android:id="@+id/radioGroup21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"


        android:layout_below="@+id/textView2">

        <RadioButton
            android:id="@+id/radio20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:checked="true"
            android:text="Maintain" />
        <RadioButton
            android:id="@+id/radio21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="Build Muscle"
            android:layout_alignTop="@+id/radioGroup1"
            android:layout_centerHorizontal="true" />
        <RadioButton
            android:id="@+id/radio22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="Lose Weight"
            android:layout_alignTop="@+id/radioGroup1"
            android:layout_centerHorizontal="true" />

    </RadioGroup>
    <Button
        android:layout_marginTop="65dp"
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00b5ff"
        android:fontFamily="segoe UI"
        android:gravity="center"
        android:onClick="clickNew"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:text="NEXT"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal" />



</RelativeLayout>
