<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context="com.example.rajukoushik.fitnessforks.MetricsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#00b5ff"
        android:paddingBottom="40dp"
        android:text="Metrics"
        android:id="@+id/textView" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
    android:orientation="horizontal"

        android:gravity="center"
        android:layout_below="@+id/textView">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:checked="true"
            android:text="Male" />
        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:text="Female"
            android:layout_alignTop="@+id/radioGroup1"
            android:layout_centerHorizontal="true" />

    </RadioGroup>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_below="@id/radioGroup1"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        tools:context=".MainActivity"
        android:id="@+id/linearLayout">


    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customized_box"
        android:fontFamily="segoe UI"
        android:hint="Age"

        android:inputType="date"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#999999" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customized_box"
        android:fontFamily="segoe UI"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Height in cm"
        android:inputType="text"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#999999" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/customized_box"
        android:fontFamily="segoe UI"
        android:hint="Weight in kgs"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:maxLength="20"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#222222"
        android:textColorHint="#999999" />
    </LinearLayout>

    <Button
        android:layout_marginTop="63dp"
        android:id="@+id/buttonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00b5ff"
        android:fontFamily="segoe UI"
        android:gravity="center"
        android:onClick="clickingNext"
        android:textColor="#ffffff"
        android:text="NEXT"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />



</RelativeLayout>
